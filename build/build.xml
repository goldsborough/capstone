<?xml version="1.0" encoding="UTF-8"?>
<project name="capstone" default="all">
  
  
  <property file="build.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="../../../../Home/lib/ant-javafx.jar"/>
      <include name="../../../../Home/lib/dt.jar"/>
      <include name="../../../../Home/lib/javafx-mx.jar"/>
      <include name="../../../../Home/lib/jconsole.jar"/>
      <include name="../../../../Home/lib/packager.jar"/>
      <include name="../../../../Home/lib/sa-jdi.jar"/>
      <include name="../../../../Home/lib/tools.jar"/>
      <include name="../../../../Home/jre/lib/charsets.jar"/>
      <include name="../../../../Home/jre/lib/deploy.jar"/>
      <include name="../../../../Home/jre/lib/javaws.jar"/>
      <include name="../../../../Home/jre/lib/jce.jar"/>
      <include name="../../../../Home/jre/lib/jfr.jar"/>
      <include name="../../../../Home/jre/lib/jfxswt.jar"/>
      <include name="../../../../Home/jre/lib/jsse.jar"/>
      <include name="../../../../Home/jre/lib/management-agent.jar"/>
      <include name="../../../../Home/jre/lib/plugin.jar"/>
      <include name="../../../../Home/jre/lib/resources.jar"/>
      <include name="../../../../Home/jre/lib/rt.jar"/>
      <include name="../../../../Home/jre/lib/ext/cldrdata.jar"/>
      <include name="../../../../Home/jre/lib/ext/dnsns.jar"/>
      <include name="../../../../Home/jre/lib/ext/jfxrt.jar"/>
      <include name="../../../../Home/jre/lib/ext/localedata.jar"/>
      <include name="../../../../Home/jre/lib/ext/nashorn.jar"/>
      <include name="../../../../Home/jre/lib/ext/sunec.jar"/>
      <include name="../../../../Home/jre/lib/ext/sunjce_provider.jar"/>
      <include name="../../../../Home/jre/lib/ext/sunpkcs11.jar"/>
      <include name="../../../../Home/jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  <!-- Modules -->
  
  
  <!-- Module capstone -->
  
  <dirname property="module.capstone.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.capstone" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.capstone" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.capstone" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.capstone" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="capstone.output.dir" value="${module.capstone.basedir}/out/production/capstone"/>
  <property name="capstone.testoutput.dir" value="${module.capstone.basedir}/out/test/capstone"/>
  
  <path id="capstone.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="capstone.module.production.classpath">
    <path refid="${module.jdk.classpath.capstone}"/>
    <pathelement location="${basedir}/lib/lanterna-2.1.9.jar"/>
  </path>
  
  <path id="capstone.runtime.production.module.classpath">
    <pathelement location="${capstone.output.dir}"/>
    <pathelement location="${basedir}/lib/lanterna-2.1.9.jar"/>
  </path>
  
  <path id="capstone.module.classpath">
    <path refid="${module.jdk.classpath.capstone}"/>
    <pathelement location="${capstone.output.dir}"/>
    <pathelement location="${basedir}/lib/lanterna-2.1.9.jar"/>
    <pathelement location="${basedir}/test/lib/hamcrestall1.3.jar"/>
    <pathelement location="${basedir}/test/lib/junit-4.12.jar"/>
  </path>
  
  <path id="capstone.runtime.module.classpath">
    <pathelement location="${capstone.testoutput.dir}"/>
    <pathelement location="${capstone.output.dir}"/>
    <pathelement location="${basedir}/lib/lanterna-2.1.9.jar"/>
    <pathelement location="${basedir}/test/lib/hamcrestall1.3.jar"/>
    <pathelement location="${basedir}/test/lib/junit-4.12.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.capstone">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.capstone">
    <patternset refid="excluded.from.module.capstone"/>
  </patternset>
  
  <path id="capstone.module.sourcepath">
    <dirset dir="${module.capstone.basedir}">
      <include name="source"/>
    </dirset>
  </path>
  
  <path id="capstone.module.test.sourcepath">
    <dirset dir="${module.capstone.basedir}">
      <include name="test"/>
      <include name="lib"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.capstone" depends="compile.module.capstone.production,compile.module.capstone.tests" description="Compile module capstone"/>
  
  <target name="compile.module.capstone.production" description="Compile module capstone; production classes">
    <mkdir dir="${capstone.output.dir}"/>
    <javac destdir="${capstone.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.capstone}/javac">
      <compilerarg line="${compiler.args.capstone}"/>
      <bootclasspath refid="capstone.module.bootclasspath"/>
      <classpath refid="capstone.module.production.classpath"/>
      <src refid="capstone.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.capstone"/>
    </javac>
    
    <copy todir="${capstone.output.dir}">
      <fileset dir="${module.capstone.basedir}/source">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.capstone.tests" depends="compile.module.capstone.production" description="compile module capstone; test classes" unless="skip.tests">
    <mkdir dir="${capstone.testoutput.dir}"/>
    <javac destdir="${capstone.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.capstone}/javac">
      <compilerarg line="${compiler.args.capstone}"/>
      <bootclasspath refid="capstone.module.bootclasspath"/>
      <classpath refid="capstone.module.classpath"/>
      <src refid="capstone.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.capstone"/>
    </javac>
    
    <copy todir="${capstone.testoutput.dir}">
      <fileset dir="${module.capstone.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.capstone.basedir}/lib">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.capstone" description="cleanup module">
    <delete dir="${capstone.output.dir}"/>
    <delete dir="${capstone.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.capstone" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.capstone" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>